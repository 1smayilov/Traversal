@model TraversalProject.Models.UserRegisterViewModel

@{
    ViewData["Title"] = "SignUp";
    Layout = null;
}

<!--
Author: W3layouts
Author URL: http://w3layouts.com
-->
<!DOCTYPE html>
<html lang="zxx">

<head>
	<title>Invent Signup Form Responsive Widget Template | Home :: W3layouts</title>
	<!-- Meta tag Keywords -->
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta charset="UTF-8" />
	<meta name="keywords"
		  content="Invent Signup Form Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template, Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
	<script>
		addEventListener("load", function () {
			setTimeout(hideURLbar, 0);
		}, false);

		function hideURLbar() {
			window.scrollTo(0, 1);
		}
	</script>
	<!-- //Meta tag Keywords -->
	<!--/Style-CSS -->
	<link rel="stylesheet" href="~/web/css/style.css" type="text/css" media="all" />
	<!--//Style-CSS -->
</head>

<body>
	<!-- /login-section -->
	<section class="w3l-login-6">
		<div class="login-hny">
			<div class="form-content">
				<div class="form-right">
					<div class="overlay">
						<div class="grid-info-form">
							<h5>Traversal Rezerv</h5>
							<h3>Hesabını Yarat </h3>
							<p>
								Bir - birindən təcrübəli rəhbərlərimizlə birlikdə Skandinaviya ölkələrəinin soyuğunu, .... Misir çöllərinə qədər görmək üçün yalnız 1 addım uzağdayıq. Səyahətlərimizə qoşulmaq üçün indi qeydiyyatdan keç.
							</p>
							<a href="SignIn" class="read-more-1 btn">Başlayaq</a>
						</div>

					</div>
				</div>
				<div class="form-left">
					<div class="middle">
						<h4>Bizə Qatılın</h4>
						<p>Hesabınızı indi yaradın</p>
					</div>
					<form method="post" class="signin-form">
						<div class="form-input">
							<label>Ad</label>
							<input type="text" placeholder="" asp-for="Name" /> @*Modelin hansı entity si üçün*@
							<span asp-validation-for="Name" class="text-danger"></span>
						</div>
						<div class="form-input">
							<label>Soyad</label>
							<input type="text" asp-for="SurName"/>
							<span asp-validation-for="SurName" class="text-danger"></span>

						</div>
						<div class="form-input">
							<label>İstifadəçi Adı</label>
							<input type="text" asp-for="UserName"/>
							<span asp-validation-for="UserName" class="text-danger"></span>
						</div>
						<div class="form-input">
							<label>Email</label>
							<input type="email" asp-for="Mail"/>
							<span asp-validation-for="Mail" class="text-danger"></span>
						</div>
						<div class="form-input">
							<label>Şifrə</label>
							<input type="password" asp-for="Password"/>
							<span asp-validation-for="Password" class="text-danger"></span>
						</div>
						<div class="form-input">
							<label>Şifrənin Təkrarı</label>
							<input type="password" asp-for="ConfirmPassword"/>
							<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
						</div>
						<div class="text-danger" asp-validation-summary="ModelOnly">
							
						</div>

						<label class="container">
							Şərtləri oxudum/<a href="#">Qəbul edirəm</a>
							<input type="checkbox">
							<span class="checkmark"></span>
						</label>
						<button class="btn">Create account</button>
					</form>
					<div class="copy-right text-center">
						<p>
							© @DateTime.Now.Year Bütün hüquqlar gizlidir

						</p>
					</div>
				</div>

			</div>

		</div>
	</section>
	<!-- //login-section -->
</body>

</html>

