@model TraversalProject.Areas.Member.Models.UserEditViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1>Profil Redakte Səhifəsi</h1>
<form method="post" enctype="multipart/form-data">
    @Html.Label("Adınız")
    <input type="text" asp-for="Name" class="form-control"/>
    <br/>
    @Html.Label("Soyadınız")
    <input type="text" asp-for="Surname" class="form-control" />
    <br />
    @Html.Label("Şifrəniz")
    <input type="text" asp-for="Password" class="form-control" />
    <br />
    @Html.Label("Təkrar Şifrə")
    <input type="text" asp-for="ConfirmPassword" class="form-control" />
    <br />
    @Html.Label("Telefon nömrəniz")
    <input type="text" asp-for="PhoneNumber" class="form-control" />
    <br />
    @Html.Label("Mail Adresiniz")
    <input type="text" asp-for="Mail" class="form-control" />
    <br />
    <div class="form-group">
        <label>Şəkil seçin</label>
        <input type="file" asp-for="Image"/>
    </div>
    <br />  
    <button class="btn btn-primary">Məlumatları Güncəllə</button>
</form>

