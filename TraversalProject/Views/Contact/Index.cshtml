@model DTOLayer.DTOs.ContactDTOs.SendMessageDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UILayout.cshtml";
}

<section class="w3l-about-breadcrumb text-left">
    <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
        <div class="container py-2">
            <h2 class="title">Contact Us</h2>
            <ul class="breadcrumbs-custom-path mt-2">
                <li><a href="/Default/Index/">Ana Səhifə</a></li>Bizə Yazın
                <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span>Əlaqə</li>
            </ul>
        </div>
    </div>
</section>
<!-- contact-form -->
<section class="w3l-contact" id="contact">
    <div class="contact-infubd py-5">
        <div class="container py-lg-3">
            <div class="contact-grids row">
                <div class="col-lg-6 contact-left">
                    <div class="partners">
                        <div class="cont-details">
                            <h5>Əlaqə Məlumatları</h5>
                            <p class="mt-3 mb-4">Salam gəzinti sevənlər, bizə 7 gün 24 saat whatsapp, mail, mesaj kimi əlaqə vasitələrimiz üzrəindən yaza bilərsiniz.</p>
                        </div>
                        <div class="hours">
                            <h6 class="mt-4">Mail Adresimiz:</h6>
                            <p>
                                <a href="">
                                    elvin1smayilov@mail.ru
                                </a>
                            </p>
                            <h6 class="mt-4">Ofisimizə gəlin:</h6>
                            <p>66/3 Behbud Shahtakhtinski, Baku</p>
                            <h6 class="mt-4">Kontakt:</h6>
                            <p class="margin-top"><a href="">+994507753500</a></p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 mt-lg-0 mt-5 contact-right">
                    <form method="post" class="signin-form">
                        <div class="input-grids">
                            <div class="form-group">
                                <input type="text" placeholder="Adınız*" asp-for="Name" class="contact-input" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="email" placeholder="Mailiniz*" asp-for="Mail" class="contact-input" />
                                <span asp-validation-for="Mail" class="text-danger"></span>

                            </div>
                            <div class="form-group">
                                <input type="text" placeholder="Mövzu*" asp-for="Subject" class="contact-input" />
                                <span asp-validation-for="Subject" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="form-group"> 
                            <textarea asp-for="MessageBody" placeholder="Mesaj daxil edin*" required=""></textarea>
                            <span asp-validation-for="MessageBody" class="text-danger"></span>

                        </div>
                        <div class="text-right">
                            <button class="btn btn-style btn-primary">Mesajı Göndər</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="map pt-md-5">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3039.3063219603027!2d49.81157357652916!3d40.379903057879055!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40307d9ac1b715cb%3A0x5d71ae1a8ab3401c!2sBaku%20Design%20Center!5e0!3m2!1str!2saz!4v1729581064134!5m2!1str!2saz" width="1100" height="200" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>
</section>

