@using EntityLayer.Concrete
 @model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}


<h1>Rol Siyahısı</h1>
@if (Model.Count > 0)
{
    <table class="table table-bordered">
        <tr>
            <td>#</td>
            <td>Rol Adı</td>
            <td>Rolu Sİl</td>
            <td>Rolu Redakte Et</td>
        </tr>

        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.Name</td>
                <td><a href="#" class="btn btn-outline-danger">Sil</a></td>
                <td><a href="#" class="btn btn-outline-success">Redakte Et</a></td>

            </tr>
        }


    </table>
}
else
{
    <div class="alert alert-danger">
        <span>Rol Tapılmadı</span>
    </div>
}


<a href="/Admin/Role/CreateRole/" class="btn btn-outline-primary">Yeni Rol Əlavə Et</a>
 