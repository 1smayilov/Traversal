@model TraversalProject.Models.MailRequest
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post">
    <h1>Yeni Mail Göndərmə Səhifəsi</h1>

    <form method="post">

        <div class="form-group">
            @Html.Label("Alıcı Mail Adresi")
            <input type="text" asp-for="ReceiverMail" class="form-control" />
        </div>
        <br />
        <div class="form-group">
            @Html.Label("Mövzu Başlığı")
            <input type="text" asp-for="Subject" class="form-control" />    
        </div>
        <div class="form-group">
            @Html.Label("Mesaj Mövzusu")
            <textarea cols="30" rows="5" class="form-control" asp-for="Body"></textarea>
        </div>
        <br />  
        <button class="btn btn-outline-primary">Mail Göndər</button>
    </form>
</form>
