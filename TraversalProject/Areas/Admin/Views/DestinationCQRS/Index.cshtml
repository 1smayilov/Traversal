@model List<GetAllDestinationQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1>CQRS Tur Məlumatları</h1>

<br />

<table class="table table-bordered">
    <tr>
        <td>#</td>
        <td>Şəhər</td>
        <td>Gün-Gecə</td>
        <td>Qiymət</td>
        <td>Tutum</td>
        <td>Sil</td>
        <td>Güncəllə</td>
    </tr> 
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.City</td>
            <td>@item.DayNight</td>
            <td>@item.Price ₼</td>
            <td>@item.Capacity</td>
            <td><a href="/Admin/DestinationCQRS/DeleteDestination/@item.Id" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Admin/DestinationCQRS/GetDestination/@item.Id" class="btn btn-outline-success">Redakte Et</a></td>
        </tr> 
    }
</table>

<a href="/Admin/DestinationCQRS/AddDestination/" class="btn btn-outline-primary">Yeni Marşrut Əlavə Et</a>
